<div class="container">
  <h1>Our Projects</h1>
  <a href="/projects/book-custom" class="btn btn-secondary">
    âž• Book a Custom Project
  </a>


  <div style="
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
      ">
    <% projects.forEach(p => { %>
      <div class="card product-card">
        <img src="<%= p.thumbnail_image %>" />
        <h3><%= p.title %></h3>
        <p><%= p.short_description %></p>
        <a href="/projects/<%= p.id %>" class="btn">View Project</a>
      </div>
    <% }) %>
  </div>
</div>
