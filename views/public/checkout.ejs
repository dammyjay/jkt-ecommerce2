<div class="container checkout-container">

  <div class="card">
    <h1>Checkout</h1>

    <div class="checkout-grid" style="display: grid; gap: var(--s-lg); grid-template-columns: 1fr 1fr;">

      <!-- Shipping Details -->
      <div class="checkout-section card" style="padding: var(--s-md);">
        <h3>Shipping Address</h3>
        <form id="checkoutForm" method="POST" action="/cart/checkout" style="display: flex; flex-direction: column; gap: var(--s-sm);">
          <label>Full Name</label>
          <input type="text" name="fullname" value="<%= user.fullname || '' %>" required>

          <label>Email</label>
          <input type="email" name="email" value="<%= user.email || '' %>" required>

          <label>Phone Number</label>
          <input type="tel" name="phone" value="<%= user.phone || '' %>" required>

          <label>Address</label>
          <textarea name="address" rows="3" required><%= user.address || '' %></textarea>

          <label>City</label>
          <input type="text" name="city" value="<%= user.city || '' %>" required>

          <label>State</label>
          <input type="text" name="state" value="<%= user.state || '' %>" required>
        </form>
      </div>

      <!-- Order Summary -->
      <div class="checkout-section card" style="padding: var(--s-md);">
        <h3>Order Summary</h3>
        <ul class="order-items" style="list-style: none; padding: 0; margin-bottom: var(--s-md);">
          <% cart.items.forEach(item => { %>
            <li style="display: flex; justify-content: space-between; margin-bottom: var(--s-xs);">
              <span><%= item.name %> x <%= item.quantity %></span>
              <span>₦<%= (item.price * item.quantity).toLocaleString() %></span>
            </li>
          <% }) %>
        </ul>
        <hr style="margin: var(--s-md) 0;">
        <h3>Total: ₦<%= cart.totalPrice.toLocaleString() %></h3>

        <label style="margin-top: var(--s-md);">Payment Option</label>
        <select name="payment_method" required>
          <option value="">Select Payment</option>
          <option value="paystack">Paystack</option>
          <option value="paypal">PayPal</option>
          <option value="stripe">Stripe</option>
        </select>

        <button type="submit" form="checkoutForm" class="btn btn-primary btn-full" style="margin-top: var(--s-md);">
          Place Order
        </button>
      </div>

    </div>
  </div>

</div>

